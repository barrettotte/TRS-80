10      REM FIND STRING ON SCREEN
20      CLEAR 1000
30      INPUT "TEXT BLOCK:";A$
40      INPUT "FIND:";B$
50      CLS
60      PRINT @512,A$
70      FOR I=1 TO LEN(A$)-LEN(B$)+1
80          IF MID$(A$,I,LEN(B$))=B$ GOTO 400
90      NEXT I
100     PRINT B$;"NOT FOUND"
110     GOTO 600
400     I=I-1
410     PRINT CHR$(14);CHR$(28);
420     FOR J=0 TO 7+INT(I/64)
430         PRINT CHR$(26)
440     NEXT J
450     IF I-INT(I/64)*64=0 GOTO 600
460     FOR J=1 TO I-INT(I/64)*64
470         PRINT CHR$(25);
480     NEXT J
600     END